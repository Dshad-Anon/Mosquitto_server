<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>MQTT Data</title>
	<link rel="stylesheet" href="/style.css">
</head>
<body>
	<h1>Temperature and Humidity Data</h1>
	<div class="container">
		<div class="temp">
			<h2>Temperature:</h2>
			<p id="temp_value"></p>
		</div>
		<div class="hum">
			<h2>Humidity:</h2>
			<p id="hum_value"></p>
		</div>
	</div>
	<script src="/socket.io/socket.io.js"></script>
	<script>
		var socket = io();

		socket.on('mqtt_message', function(data) {
			if (data.temp) {
				document.getElementById('temp_value').innerHTML = data.temp + " Â°C";
			} else if (data.hum) {
				document.getElementById('hum_value').innerHTML = data.hum + " %";
			}
		});
	</script>
</body>
</html>
